# ========================================
# Configuração do Ambiente - Exemplo
# ========================================
# IMPORTANTE: NÃO commitar este arquivo com valores reais!
# Copie para .env e preencha com valores reais
# ========================================

# ========================================
# DATABASE
# ========================================
DB_HOST=localhost
DB_USER=root
DB_PASS=sua_senha_aqui
DB_NAME=clientes_db
DB_CONNECTION_LIMIT=10

# ========================================
# SECURITY - JWT & CSRF
# ========================================
# IMPORTANTE: Gere secrets fortes com:
# openssl rand -hex 64
#
# NUNCA use valores de exemplo em produção!
# Cada secret deve ter pelo menos 32 caracteres (64 hex = 256 bits)

JWT_SECRET=GERE_UM_SECRET_COM_PELO_MENOS_32_CARACTERES_USANDO_OPENSSL_RAND_HEX_64
JWT_REFRESH_SECRET=GERE_OUTRO_SECRET_DIFERENTE_COM_PELO_MENOS_32_CARACTERES
CSRF_SECRET=GERE_MAIS_UM_SECRET_DIFERENTE_COM_PELO_MENOS_32_CARACTERES

# ========================================
# ENVIRONMENT
# ========================================
NODE_ENV=development
PORT=3000
DEBUG_MODE=false

# ========================================
# FRONTEND
# ========================================
FRONTEND_URL=http://localhost:5173

# ========================================
# ADMIN
# ========================================
ADMIN_EMAIL=admin@exemplo.com

# ========================================
# BACKUP (Opcional)
# ========================================
BACKUP_ENABLED=true
BACKUP_MAX_FILES=7
BACKUP_INTERVAL_HOURS=24

# ========================================
# LOGGING (Opcional)
# ========================================
LOG_LEVEL=info
LOG_MAX_FILES=14d

# ========================================
# RATE LIMITING (Opcional)
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
AUTH_RATE_LIMIT_MAX=5
