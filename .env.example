# Configuração do Banco de Dados
DB_HOST=sao.domcloud.co
DB_USER=seu_usuario
DB_PASS=sua_senha
DB_NAME=seu_banco

# Segurança - JWT
JWT_SECRET=gere_uma_chave_secreta_forte_com_pelo_menos_128_caracteres
JWT_REFRESH_SECRET=gere_outra_chave_secreta_diferente_para_refresh_tokens

# Segurança - CSRF
CSRF_SECRET=pode_usar_a_mesma_que_JWT_SECRET_ou_gerar_uma_nova

# Servidor
PORT=3000
NODE_ENV=development

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# E-mail do Administrador
ADMIN_EMAIL=admin@example.com

# Configurações de Backup (opcional)
BACKUP_ENABLED=true                    # Habilitar backups automáticos (padrão: true)
BACKUP_MAX_FILES=7                     # Número máximo de backups a manter (padrão: 7)
BACKUP_INTERVAL_HOURS=24               # Intervalo entre backups em horas (padrão: 24)
